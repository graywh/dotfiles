startup_message off
chdir

# don't do multiple logins
deflogin off

# use a tabline
hardstatus alwayslastline
#hardstatus string '%{= kK}[%L=%=%{w}%-Lw%>%40=%{r}(%{W}%n*%f%t%{r})%{w}%+Lw%L<%-019=%{K}][%{G}%D %d %M %0c%{K}]'
hardstatus string '%{= kK}[ %L=%{w}%-Lw%50L>%{r}(%{W}%n%f*%t%{r})%{w}%+Lw%-025<%L=                                                                                                                                                                                         %{K}][%D %d %M %Y %0c]%>%<'

